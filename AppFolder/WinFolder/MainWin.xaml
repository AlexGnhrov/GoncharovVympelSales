                                       VerticalAlignment="Top" HorizontalAlignment="Right"
                                       Margin="10"
                                       MouseLeftButtonUp="ShrinkBorderArrowIm_MouseLeftButtonUp">
                            </Image>


                            <StackPanel Margin="0,40,0,0" VerticalAlignment="Top" >
                                <Button x:Name="DeportamenListBtn"  Tag="NoUse" Style="{DynamicResource MenuButton}"
                                            Click="MenuButtons_Click" >

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <Image Source="/AppFolder/ResourceFolder/ImageFolder/IconForMenuButton/DeportamentIcon.png"  Margin="15,5,0,5" 
                                                   RenderOptions.BitmapScalingMode="HighQuality" />
                                        <TextBlock Text="Отделы" Grid.Column="1" Style="{DynamicResource TextForMenuButtons}" Tag="NoUse" />
                                    </Grid>
                                </Button>
                                <Button x:Name="StaffListBtn" Tag="NoUse" IsTabStop="False" Style="{DynamicResource MenuButton}"
                                            Click="MenuButtons_Click" >
