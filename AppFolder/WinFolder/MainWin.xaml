                    UseLayoutRounding="True">
                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="45"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>


                    <Border CornerRadius="{StaticResource CornerValue}" Grid.Column="1"
                            Grid.RowSpan="2">
                        <Border.Background>
                            <ImageBrush ImageSource="/GoncharovVympelSale;component/AppFolder/ResourceFolder/ImageFolder/BackgroundImage.png" Stretch="UniformToFill"/>
                        </Border.Background>
                    </Border>

                    <Border x:Name="LeftMenuBorder" Background="{StaticResource SecondColor}" Width="205" 
                            CornerRadius="0,10,0,4" Grid.Row="1" 
                            MouseLeftButtonDown="LeftMenuBorder_MouseLeftButtonDown" >
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="10"/>
                            </Grid.RowDefinitions>

                            <Image x:Name="ShrinkBorderArrowIm" Source="/GoncharovVympelSale;component/AppFolder/ResourceFolder/ImageFolder/IconForMenuButton/ShrinkArrowIcon.png"
