                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Image Source="/GoncharovVympelSale;component/AppFolder/ResourceFolder/ImageFolder/IconForMenuButton/StaffIcon.png" Margin="15,5,0,5" />
                                        <TextBlock Text="Сотрудники" Grid.Column="1" Style="{DynamicResource TextForMenuButtons}" />
                                    </Grid>
                                </Button>
                                <Button x:Name="ClientListBtn" Tag="NoUse" Style="{DynamicResource MenuButton}"
                                        Click="MenuButtons_Click">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Image Source="/GoncharovVympelSale;component/AppFolder/ResourceFolder/ImageFolder/IconForMenuButton/ClientIcon.png" Margin="15,5,0,5" />
                                        <TextBlock  Text="Клиенты" Grid.Column="1"  Style="{DynamicResource TextForMenuButtons}"/>
                                    </Grid>
                                </Button>

                                <Border x:Name="MenuSeparator" Background="#E3E3E3" Height="2" Margin="10,5" CornerRadius="1"/>

                                <Button x:Name="CatalogListBtn" Tag="NoUse" Style="{DynamicResource MenuButton}"
                                        Click="MenuButtons_Click">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Image Source="/GoncharovVympelSale;component/AppFolder/ResourceFolder/ImageFolder/IconForMenuButton/CatalogIcon.png" Margin="15,5,0,5" />
