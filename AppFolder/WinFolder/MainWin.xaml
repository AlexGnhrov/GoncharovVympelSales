                                             Placement="Bottom" HorizontalOffset="-10">

                                        <Border Background="White" CornerRadius="{StaticResource CornerValue}">
                                            <TextBlock Margin="10,5" FontSize="16" Foreground="Black" HorizontalAlignment="Center">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0} {1} {2}">
                                                        <Binding Path="Surname" />
                                                        <Binding Path="Name" />
                                                        <Binding Path="Patronymic" FallbackValue="" />
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="10" Opacity="0.3"/>
                                            </Border.Effect>
                                        </Border>
                                    </ToolTip>
                                </Ellipse.ToolTip>
                            </Ellipse>


                        </StackPanel>


                        <Frame Name="MainFrame" Grid.Row="1" Panel.ZIndex="1" IsTabStop="False"
                                   PreviewMouseUp="FrontFrame_PreviewMouseDown"
                                   Navigated="MainFrame_Navigated"
                                   Margin="0,20,0,0"/>

                    </Grid>

                    <Border Background="#E3E3E3" Grid.Column="0" VerticalAlignment="Top" Height="1" Grid.ColumnSpan="2" Grid.Row="1"/>

                </Grid>

            </Border>





            <Frame x:Name="FrontFrame"  Tag="Use"   IsTabStop="False"
                   Navigated="FrontFrame_Navigated" Grid.RowSpan="2"
                   Visibility="Collapsed"/>


            <Border Background="Transparent"  MouseLeftButtonDown="Border_MouseLeftButtonDown"/>



            <Grid>
                <StackPanel Orientation="Horizontal">
                    <StackPanel x:Name="LeftToolBarSP" Orientation="Horizontal" Cursor="Hand"
                                HorizontalAlignment="Left"  MouseLeftButtonUp="MainLogo_MouseLeftButtonUp" >
                        <Image Source="/GoncharovVympelSale;component/AppFolder/ResourceFolder/ImageFolder/MainLogo.png"
                                 Margin="10,5,5,5" RenderOptions.BitmapScalingMode="HighQuality">
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Opacity" Value="0.56"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>

                        <TextBlock Text="ВЫМПЕЛ ПРОДАЖИ" FontSize="18" VerticalAlignment="Center"
                                   Foreground="#09155F" HorizontalAlignment="Left"
                                   FontWeight="Bold" />
                    </StackPanel>

                    <StackPanel x:Name="StaffDetails" Margin="20,0" Orientation="Horizontal" IsHitTestVisible="False">
                        <TextBlock Text="{Binding DepartamentCompany.DepartamentID,StringFormat='{}Отдел:  №{0}'}" FontWeight="SemiBold"
                                   Style="{StaticResource TextForMenuButtons}" Width="auto"/>
                        <TextBlock Text="{Binding Role.NameRole,StringFormat='{}Роль: {0}'}" FontWeight="SemiBold" Width="auto"
                                   Style="{StaticResource TextForMenuButtons}" TextWrapping="NoWrap"/>
                    </StackPanel>

                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button x:Name="HideWinBTN" Content="—"
                                Style="{StaticResource WinButtonOthers}"
                                VerticalAlignment="Bottom" FontFamily="16"
                                Padding="0.2,2,0,-4"
                                Margin="5,5"
                                Click="WinClickBTN_Click"/>
                    <Button x:Name="FullScreenBTN" Content="☐" Padding="0,0,0,0"
                                Style="{StaticResource WinButtonOthers}" FontSize="15"
                                VerticalAlignment="Bottom" Margin="5,5" 
                                Click="WinClickBTN_Click"/>
                    <Button x:Name="CloseWinBTN" Content="❌" Style="{StaticResource WinButtonClose}"
                                VerticalAlignment="Bottom" Margin="5,5,10,5"
                                Click="WinClickBTN_Click"/>
                </StackPanel>

            </Grid>

        </Grid>



    </Grid>
</Window>
