                                    </Grid>
                                </Button>
                                <Button x:Name="OrderListBtn" Tag="NoUse"
                                        Style="{DynamicResource MenuButton}"
                                        Click="MenuButtons_Click">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Image Source="/GoncharovVympelSale;component/AppFolder/ResourceFolder/ImageFolder/IconForMenuButton/OrderIcon.png"
